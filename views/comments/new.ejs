<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Add a new comment on <%= campground.name %></h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a class="btn btn-info" href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>